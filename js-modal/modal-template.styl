.text-uppercase
  text-transform: uppercase
::-webkit-scrollbar{
  display: none
}

$width-dialog = 600px
$height-dialog = 450px
$width-gutter = 35px
$width-dialog-fixed-top = 10%

$columns = 4
$columns-mobile = 2

$color-default = #000
$color-grey = #000
$color-grey-sub = #808080

g-flex()
  display: -webkit-box
  display: -moz-box
  display: -ms-flexbox
  display: -webkit-flex
  display: flex

border-right(arg...)
  border-right: arg
  &:last-child
    border-right: none
  @media (max-width: $width-dialog)
    &:nth-of-type(odd)
      border-right: arg
    &:nth-of-type(even)
      border-right: none

box-sizing()
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

box-shadow(arg...)
  -webkit-box-shadow: arg
  -moz-box-shadow: arg
  box-shadow: arg

.dialog-container
  $width-container = ($width-dialog + 2 * $width-gutter)
  position: fixed
  top: $width-dialog-fixed-top
  left: 50%
  margin-left: -($width-container/2)
  padding: $width-gutter


  box-shadow(0 5px 15px rgba(0, 0, 0, .5))
  box-sizing()
  border: 1px solid #cccccc
  z-index: 1020
  overflow: hidden
  width: ($width-container)
  height: $height-dialog
  background-color: #fff
  &.fade
    -webkit-transition: opacity .3s linear, top .3s ease-out
    -moz-transition: opacity .3s linear, top .3s ease-out
    -o-transition: opacity .3s linear, top .3s ease-out
    transition: opacity .3s linear, top .3s ease-out
    top: -25%
    &.in
      top: $width-dialog-fixed-top
  @media (max-width: $width-dialog)
    top: 0.5%
    left: 0.5%
    bottom: 0.5%
    right: 0.5%
    margin-left: 0
    padding: $width-gutter 24px 24px 24px
    width: unset
    height: unset
    &.fade.in
      top: 0.5%
  .dialog-header
    g-flex()
    justify-content: space-between
    align-items: center
    padding: 9px 15px
    border-bottom: 1px solid $color-grey-sub
    .title
      padding: 0
      margin: 0 0 12px 0
      font-size: 24px
      font-weight: 400
      letter-spacing: 1px
    .close
      position: absolute
      top: 0
      right: 0
      width: 50px
      height: 50px
      line-height: 50px
      text-align: center
      font-size: 24px
      font-weight: 400
      z-index: 1050
      cursor: pointer
      &:hover
        color: #fff
        background-color: rgba(0,0,0,.09)
      @media (max-width: $width-dialog)
        top: 90%
        left: 50%
        transform: translate3d(-50%, 0, 0)
  .dialog-inner
    height: 100%
    overflow-y: scroll
    overflow: auto
    box-sizing()
    .dialog-content
      position: relative
      margin-top: 12%
      height: 100%
      .columns-content
        position: relative
        g-flex()
        justify-content: space-around
        align-items: flex-start
        flex-wrap: wrap
        .column-item
          flex: 0 0 floor((100% - 1%) / $columns)
          width: floor((100% - 1%) / $columns)
          max-width: floor((100% - 1%) / $columns)
          min-height: 200px
          border-right(1px solid #efefef)
          box-sizing()
          @media (max-width: $width-dialog)
            flex: 0 0 floor((100% - 1%) / $columns-mobile )
            width: floor((100% - 1%) / $columns-mobile )
            max-width: floor((100% - 1%) / $columns-mobile )
          .title,.link
            text-align: center
            font-size: 12px
            font-weight: 400
          .title
            margin: 0 0 35px 0
            color: $color-default
          .link
            display: block
            text-decoration: none
            color: $color-grey-sub

.modal-mask
  display: block
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.78)
  z-index: 1010
