.image-container
  position: relative
  height: 100%
  .loading
    position: absolute
    display: flex
    left: 0
    top: 0
    width: 100%
    height: 100%
    justify-content: center
    align-items: center
    text-align: center
    z-index: 100
    animation: colorful 18s infinite
    font-size: 24px
    font-weight: 700
    background-color: red
  .image-content
    width: 100%
    height: 90vh
    text-align: center
    .image
      height: 100%
      min-height: 80%
  .btn-container
    margin-top: 15px
    text-align: center
    .btn
      display: inline-block
      width: 80px
      height: 50px
      line-height: 50px
      text-align: center
      font-size: 16px
      border: 1px solid #ccc9c9
      background-color: #fff
      &:hover
        background-color: rgba(232, 229, 229, 0.48)
        cursor: pointer

@keyframes colorful {
  12% {
    background-color: orange;
  }
  24% {
    background-color: yellow;
  }
  36% {
    background-color: green;
  }
  48% {
    background-color: cyan;
  }
  60% {
    background-color: blue;
  }
  72% {
    background-color: blueviolet;
  }
  84% {
    background-color: red;
  }
  96% {
    background-color: green;
  }
}

@keyframes colorfuls {
  12% {
    background: linear-gradient(90deg, orange, yellow, green, cyan, blue, blueviolet, red);
  }
  24% {
    background: linear-gradient(90deg, yellow, green, cyan, blue, blueviolet, red, orange);
  }
  36% {
    background: linear-gradient(90deg, green, cyan, blue, blueviolet, red, orange, yellow);
  }
  48% {
    background: linear-gradient(90deg, cyan, blue, blueviolet, red, orange, yellow, green);
  }
  60% {
    background: linear-gradient(90deg, blue, blueviolet, red, orange, yellow, green, cyan);
  }
  72% {
    background: linear-gradient(90deg, blueviolet, red, orange, yellow, green, cyan, blue);
  }
  84% {
    background: linear-gradient(90deg, red, orange, yellow, green, cyan, blue, blueviolet);
  }
  96% {
    background: linear-gradient(90deg, green, cyan, blue, blueviolet, red, orange, yellow);
  }
}